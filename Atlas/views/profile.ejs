<html lang="en">
  <head>
    <%- include ("partials/header") %>
    <title>Login</title>
  </head>
  <body>
    <%- include ("partials/nav") %>
    <div class="content">
      <div class="title">Hi, User <%= user.name %></div>
      <img src="<%= user.thumbnail %>" alt="">
      <p><%= user.date %></p>
    <% if (posts.length > 0) { %> <% for (let i = 0; i < posts.length; i++) { %>
    <div class="mycard">
      <h5 class="card-title"><%= posts[i].title %></h5>
      <div class=""><%= posts[i].content %></div>
      <div class=""><%= posts[i].date %> </div>
    </div>
    <% } %> <% } %>
  </div>
  </body>
</html>
